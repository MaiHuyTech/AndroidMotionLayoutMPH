<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/widget" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.176"
            app:layout_constraintHorizontal_bias="0.497" />
        <Constraint
            android:id="@+id/btnCam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_editor_absoluteY="450dp"
            app:layout_editor_absoluteX="48dp" />
        <Constraint
            android:id="@+id/btnCam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_editor_absoluteY="450dp"
            app:layout_editor_absoluteX="48dp" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="88dp"
            android:layout_marginRight="88dp"
            android:layout_marginBottom="212dp" />
        <Constraint
            android:layout_height="wrap_content"
            app:layout_editor_absoluteX="177dp"
            android:layout_width="wrap_content"
            android:id="@+id/imageView3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.215" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/imageView2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="212dp"
            android:layout_marginLeft="88dp"
            android:layout_marginStart="88dp" />
        <Constraint
            android:layout_height="63dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="66dp"
            android:id="@+id/button2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="44dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:layout_constraintVertical_bias="0.656"
            app:layout_constraintHorizontal_bias="0.498" />
        <Constraint
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:id="@+id/buttonPic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.867"
            app:layout_constraintHorizontal_bias="0.498" />
        <Constraint
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:id="@+id/buttonMic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.928"
            app:layout_constraintHorizontal_bias="0.498" />
        <Constraint
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:id="@+id/buttonCam"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.867"
            app:layout_constraintHorizontal_bias="0.498" />
        <Constraint
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="60dp"
            android:id="@+id/buttonMain"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.929" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@id/widget" />
        <Constraint
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:id="@+id/buttonCam"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="56dp"
            android:layout_marginStart="56dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonMain"
            android:layout_marginBottom="68dp" />
        <Constraint
            android:layout_height="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="60dp"
            android:id="@+id/buttonMain"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.828"
            app:layout_constraintHorizontal_bias="0.498" />
        <Constraint
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:id="@+id/buttonMic"
            app:layout_constraintBottom_toTopOf="@+id/buttonMain"
            android:layout_marginBottom="68dp"
            app:layout_editor_absoluteX="175dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="1.0" />
        <Constraint
            android:layout_height="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="60dp"
            android:id="@+id/buttonPic"
            android:layout_marginEnd="56dp"
            android:layout_marginRight="56dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonMain"
            android:layout_marginBottom="68dp" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.154"
            app:layout_constraintHorizontal_bias="0.497" />
    </ConstraintSet>

    <Transition
        app:constraintSetStart="@id/start"
        app:constraintSetEnd="@id/end">

        <OnClick app:targetId="@id/buttonMain"  />

    </Transition>
</MotionScene>
